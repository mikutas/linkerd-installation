{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'github>aquaproj/aqua-renovate-config#1.11.0',
    'github>mikutas/my-renovate-config',
  ],
  packageRules: [
    {
      matchPackageNames: [
        'linkerd/linkerd2',
      ],
      versioning: 'regex:(?<compatibility>stable|edge)-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?',
    },
    {
      matchPackagePatterns: [
        'linkerd2',
        'linkerd-crds',
        'linkerd-control-plane',
        'linkerd-viz',
      ],
      groupName: 'linkerd',
    },
  ],
  customManagers: [
    {
      customType: 'regex',
      fileMatch: [
        'helmfile\\.yaml',
      ],
      matchStrings: [
        'linkerd\\/linkerd2\\/blob\\/(?<currentValue>(?<compatibility>stable|edge)-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?)',
      ],
      datasourceTemplate: 'github-releases',
      depNameTemplate: 'linkerd/linkerd2',
    },
  ],
  registryAliases: {
    linkerd: 'https://helm.linkerd.io/stable',
    'linkerd-edge': 'https://helm.linkerd.io/edge',
  },
}
